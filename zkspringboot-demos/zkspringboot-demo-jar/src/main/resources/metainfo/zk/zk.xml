<?xml version="1.0" encoding="UTF-8"?>
<zk>
	<config-name>zkspringboot-demo</config-name>

	<!--enable websocket support in ZK 8.5.1 (ZK-3799)  -->
	<listener>
		<listener-class>org.zkoss.zkmax.au.websocket.WebSocketWebAppInit</listener-class>
	</listener>

	<richlet>
		<richlet-name>TestRichlet</richlet-name><!-- your preferred name -->
		<richlet-class>org.zkoss.zkspringboot.demo.richlet.TestRichlet</richlet-class><!-- your class name, of course -->
	</richlet>
	<richlet-mapping>
		<richlet-name>TestRichlet</richlet-name>
		<url-pattern>/richlet/test</url-pattern>
	</richlet-mapping>
</zk>
