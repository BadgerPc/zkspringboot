#!/bin/bash

maindir="$(pwd)"
ver=$(head -1 version)
stamp=$(date +%Y%m%d%H)
target=$1
if [ "$target" == "official" ] ; then
	pver=$ver
else
	pver=$ver-FL-$stamp
fi

echo $pver

set -e

bash ./upVer $ver-SNAPSHOT $pver

mvn clean install -pl zkspringboot-starter -am
mvn clean test -pl zkspringboot-zats
mvn source:jar javadoc:jar repository:bundle-create --batch-mode -DskipTests -pl zkspringboot-zats -am

cd $maindir
bash ./prepare-upload.sh $pver